pipeline{
    agent any
    tools{
        gradle 'gradle 6.3'
    }
    stages{
        stage("test ssh"){
            steps{
                echo 'building the staging application...'
                sh 'sudo gcloud compute scp --recurse --zone=europe-west3-c boot cms-api-prod:/home/dzioba99/cms-api/'
                sh 'gcloud compute ssh --zone=europe-west3-c cms-api-prod --command="sh /home/dzioba99/cms-api/boot/run.sh"'
               }
        }
        stage("Build jar"){
            steps{
                echo 'building the staging application...'
                sh './gradlew clean build'
            }
        }
        
       stage("Build docker"){
            steps{
                echo 'building docker...'
                sh 'docker build -f src/main/docker/Dockerfile -t cms-api:latest .' 
                sh 'docker tag cms-api dzioba/cms-api:latest'
            }
        }
        
       stage("Publish image to Docker Hub"){
            steps{
                echo 'publishing docker...'
                withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
                    sh 'docker push dzioba/cms-api:latest'
                }
            }
        }
        stage('Run Docker container') {
            steps {
                echo 'running docker container...'
                sh 'gcloud compute scp --recurse --zone=europe-west3-c boot cms-api-prod:/home/dzioba99/cms-api/'
                sh 'gcloud compute ssh --zone=europe-west3-c cms-api-prod --command="sudo sh /home/dzioba99/cms-api/boot/run.sh"'
            }
        }
    }
}
