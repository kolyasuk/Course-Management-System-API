pipeline{
    agent any
    tools{
        gradle 'gradle 6.3'
    }
    stages{
        stage("Build jar"){
            steps{
                echo 'building the staging application...'
                sh 'pwd'
                sh './gradlew clean build'
            }
        }
        
       stage("Build docker"){
            steps{
                echo 'building docker...'
                sh 'docker build --no-cache -f src/main/docker/Dockerfile -t cms-api:latest .'
                sh 'docker tag cms-api dzioba/cms-api:latest'
            }
        }
        
       stage("Publish image to Docker Hub"){
            steps{
                echo 'publishing docker...'
                withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
                    sh 'docker push dzioba/cms-api:latest'
                }
            }
        }
        stage('Run Docker container') {
            steps {
                withDockerRegistry([ credentialsId: "docker-hub-credentials", passwordVariable: 'DOCKER_REGISTRY_PWD', usernameVariable: 'DOCKER_REGISTRY_USER']) {
                    echo 'running docker container...'
                    sh 'gcloud compute scp --recurse --zone=europe-west3-c boot cms-api-prod:~/cms-api/'
                    sh 'gcloud compute ssh --zone=europe-west3-c cms-api-prod --command="sudo sh /home/jenkins/cms-api/boot/run.sh \'test\' '${DOCKER_REGISTRY_USER}' '${DOCKER_REGISTRY_PWD}'"'
                }
            }
        }
    }
}
