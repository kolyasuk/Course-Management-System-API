pipeline{
    agent any
    tools{
        gradle 'Gradle'
    }
    stages{
        stage("Build jar"){
            steps{
                echo 'building the staging application...'
                sh './gradlew --no-daemon -Dorg.gradle.jvmargs=-Xmx350m clean build'
            }
        }
        
       stage("Build docker"){
            steps{
                echo 'building docker...'
                sh 'sudo docker build -f src/main/docker/Dockerfile -t cms-api:latest .' 
                sh 'docker tag cms-api dzioba/cms-api:latest'
            }
        }
        
       stage("Publish image to Docker Hub"){
            steps{
                echo 'publishing docker...'
                sh  'docker push dzioba/cms-api:latest'
            }
        }
        
       stage('Run Docker container') {
            steps {
                sh "docker -H ssh://ec2-user@ec2-3-65-11-209.eu-central-1.compute.amazonaws.com -i "awskey.pem"  run -d -p 8080:8080 dzioba/cms-api"
            }
        }
    }
}
