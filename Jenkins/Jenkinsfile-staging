pipeline{
    agent any
    tools{
        gradle 'Gradle 7.0.2'
    }
    stages{
        stage("build"){
            steps{
                echo 'building the staging application...'
            }
        }

        stage("test"){
            steps{
                echo 'testing the staging application...'
            }
        }

        stage("deploy"){
            steps{
                echo 'deploying the staging application...'
                sh './gradlew -v'
            }
        }
    }
}
